<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.gymwatch.activity.ExerciseCreationActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/exercise_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name of the exercise"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/exercise_weight"
            android:layout_width="413dp"
            android:layout_height="73dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Weight" />

        <EditText
            android:id="@+id/exercise_reps"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ems="10"
            android:inputType="number"
            android:text="Reps" />

        <EditText
            android:id="@+id/exercises_description_txt"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Description"
            android:textAlignment="textStart"
            android:textIsSelectable="true" />

        <ImageView
            android:id="@+id/ExercisePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_workout_btn"
            android:layout_width="50dp"
            android:layout_height="53dp"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@android:color/black"
            app:srcCompat="@android:drawable/ic_menu_save"
            tools:backgroundTint="@android:color/black" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
