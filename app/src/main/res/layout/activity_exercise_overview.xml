<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.gymwatch.activity.ExerciseOverviewActivity">

    <TextView
        android:id="@+id/ExerciseName"
        android:layout_width="337dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Name of the exercise"
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ExerciseDescription"
        android:layout_width="346dp"
        android:layout_height="131dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="Description:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseName" />

    <TextView
        android:id="@+id/ExerciseReps_txt"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="97dp"
        android:text="Reps:"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescription" />

    <TextView
        android:id="@+id/ExerciseWeight_txt"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:text="Weight:"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseReps_txt" />

    <EditText
        android:id="@+id/ExerciseReps_Nmbr"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ExerciseReps_txt"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescription" />

    <EditText
        android:id="@+id/ExerciseWeight_Nmbr"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ExerciseWeight_txt"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseReps_Nmbr" />

    <TextView
        android:id="@+id/previously_txt"
        android:layout_width="115dp"
        android:layout_height="34dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="36dp"
        android:text="previously:"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseDescription" />

    <Button
        android:id="@+id/ViewDetails_btn"
        android:layout_width="124dp"
        android:layout_height="39dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="8dp"
        android:text="View details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PreviouseWeight_txt" />

    <EditText
        android:id="@+id/PreviouseReps_txt"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previously_txt" />

    <EditText
        android:id="@+id/PreviouseWeight_txt"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PreviouseReps_txt" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:src="@drawable/ic_check2"
        app:backgroundTint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@android:color/background_light" />

</android.support.constraint.ConstraintLayout>
